# honux
# terminal color
export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad

# git auto completion
if [ -f ~/.git-completion.bash ]; then
. ~/.git-completion.bash
fi

#useful command for me
gclean() {
	if [[ $1 == "" ]]; then
		FNAME=*.orig
	else
		FNAME=$1
	fi
	echo "REMOVE $FNAME RECURSIVELY ... "
#	find ./ -name $FNAME  
	find ./ -name $FNAME -print0 | xargs -0 rm -rf
}
alias glog='git log --pretty=format:"%h - %an, %s (%ar)" -10'
alias gtree='git log --pretty=format:"%h - %an" --graph' 
# end honux bashrc
